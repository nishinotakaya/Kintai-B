<% provide(:class_text, 'overwork-request') %>
<% provide(:button_text, '残業申請') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">残業申請</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_overwork_request_user_attendance_path(@user, @attendance), local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-condensed table-hover" id="table-attendances">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>翌日</th>
                  <th>業務処理内容</th>
                  <th>指導者管理内容</th>
                </tr>
              </thead>
              
              <tbody>
                
                  <tr>
                    <td><%= l(@attendance.worked_on, format: :short) %></td>
                    <td><%= f.text_field : %></td>
                    <td><%= f.text_field : %></td> 
                    <td><%= f.text_field : %></td> 
                    <td><%= f.text_field : %></td> 
                    <td><%= f.text_field : %></td> 
                  </tr>
              </tbody>
            </table>
            <%= f.submit "残業申請", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div> 
    </div>
  </div>
</div>


          
    
        
        

            
        