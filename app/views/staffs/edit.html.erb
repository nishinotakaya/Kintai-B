<% provide(:title, "Edit") %>
<% provide(:class_text, 'user--edit') %>
<% provide(:button_text, '更新') %>
<h1>アカウント情報の更新</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @staff, local: true  ) do |f| %>
  <%= render 'shared/error_messages',  object: @staff %>

  <%= f.label "名前", class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label "所属", class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :attachment, class: "form-control" %>
  

  <%= f.label "電話番号", class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :cellphone, class: "form-control" %>
  
  <%= f.label :パスワード, class: "label-login" %>
  <%= f.password_field :password, class: 'form-control' %>
  
 

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>

  </div>
</div>