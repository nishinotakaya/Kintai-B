<%= form_with(model: @staff, url:  update_basic_info_staff_path(@staff), local: true, method: :patch) do |f| %>
  <%= render 'shared/error_messages',  object: staff %>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label "電話番号", class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :cellphone, class: "form-control" %>

 
  
  <%= f.submit :編集する, class: "btn btn-primary btn-block btn- active btn-#{yield(:class_text)}" %>
<% end %>
 


  