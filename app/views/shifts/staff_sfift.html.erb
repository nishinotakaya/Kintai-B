<h1>OOの里 デイサービス 勤務表
<% today = Date.today%>
<br><%= today.strftime('%Y年%m月')%></h1>
<% month = today.strftime('%m')%>
<table align="center" cellspacing="5", cellpadding="5">
	<thead>
		<tr>
			<% [*@first_day..@last_day].each do |day| %>
				<th></th>
				<th></th>
				<th><font size="5"><%= day.strftime("%d") %></font></th>
			<% end %>
		</tr>
		<tr>
			<% [*@first_day..@last_day].each do |day| %>
				<th></th>
				<th></th>
				<th><font size= "5"><%= $days_of_the_week[day.wday] %></font></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @staffs.each do |staff| %>
			<tr>
				<th></th>
				<td><font size= "5"><%= staff.name %></font></td>
			<% @shifts.each do |shift| %>
				<td></td>
			<% end %>
			</tr>
		<% end %>	
	</tbody>
</table>
