<div class= "center"> 
		<%= form_with( model: @staffs, url: shifts_shifts_update_path, local: true, method: :patch) do |f| %>
	<table>
		<tr>
      <td>
          <%= link_to "⇦ ",shifts_shifts_change_path(date: @first_day.prev_month), class: "btn btn-info" %>
        【<%= l(@first_day, format: :middle) %>】時間管理表
          <%= link_to " ⇨", shifts_shifts_change_path(date: @first_day.next_month), class: "btn btn-info" %>
      </td>
		</tr>
	</table>	
	<br><table align="left" class="table-border-dark table-condensed table-hover shifts-table">
			<!--< %= f.fields_for "shifts[]", shifts do |s| %>-->
				<thead>
				<%= f.fields_for "shifts[]", shifts do |s| %>
					<tr>
						<th></th>
						<% [*@first_day..@last_day].each do |day| %>
							<th><%= day.strftime("%d") %></th>
						<% end %>
					</tr>
					<tr>
						<th></th>
						<% [*@first_day..@last_day].each do |day| %>
							<th><%= $days_of_the_week[day.wday] %></th>
						<% end %>
					</tr>
					<% @shifts.each do |shift| %>
						<tr>
							<th></th>
						<% [*@first_day..@last_day].each do |day| %>
							<th><%= f.text_area :day_shift_a ,class: "shifts_event", size: "1x7" %></th>
						<% end %>
					<% end %>
					</tr>
				</thead>
				<tbody>
					<% @shifts.each do |shift| %>
						<tr>
							<th width="0"><%= Staff.find(shift.staff_id).staff %></th>
							<% [*@first_day..@last_day].each do |day| %>
								<td><%= f.select :day_shift,[['日'],['A'],['休'],['(休)'],['夜'],['明'],['/休'],['休/'],['(有)']],{ include_blank: true} %></td>
							<% end %>	
						</tr>
					<% end %>	
				</tbody>
			<!--< % end %>-->	
		</table>
	<% end %>	
</div> 