<h1><%= @client.client_name %>様の個別記録</h1>
<div>
  <table class="table table-bordered table-condensed client-table">
    
    <!--< %= link_to "⇦先月 ", client_path(date: @first_day.prev_month), class: "btn btn-info" %>-->
        
    <!--< %= link_to " 翌月⇨", client_path(date: @first_day.next_month), class: "btn btn-info" %>-->
    <%= link_to "利用者情報報告書新規作成", monitoring_basic_info_client_monitorings_path(@client), class: "btn btn-info" %>&thinsp;
    <%= link_to "アセスメントシート新規作成", asesment_new_client_asesments_path(@client), class: "btn btn-info" %>
    <thead>
    <tr>
      <th>利用者情報報告書</th>
      <th>アセスメントシート</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td>
      <% @monitorings.each do |monitoring| %>
        <br><%= link_to monitoring.monitoring_worked_on_year.strftime("%Y年")+monitoring.monitoring_worked_on_month.strftime("%m月"), 
             monitoring_basic_info_affter_client_monitoring_path(@client, monitoring), class: "btn btn-primary" %></br>
      <% end %>
        <%= paginate(@monitorings) %>
        </td>
        <td>
        <% @asesments.each do |asesment| %>
          <br><%= link_to asesment.asesment_create_year.strftime("%Y年")+asesment.asesment_create_day.strftime("%-m月%-d日"),
              asesment_affter_client_asesment_path(@client, asesment), class: "btn btn-primary" %></br>
        <% end %>
        <%= paginate(@asesments) %>
        </td>
      </tr>
    </tbody>
  </table>
  